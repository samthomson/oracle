{
  "name": "api",
  "version": "1.0.0",
  "repository": "https://github.com/samthomson/oracle",
  "author": "samt@samt.st",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "test-run": "ts-node src/pull-data.ts",
    "run-once": "ts-node src/run-once.ts",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "type-check": "tsc --noEmit",
    "forever": "forever start -c ts-node ./src/pseudo-cron.ts",
    "build": "tsc",
    "start-server": "node --inspect=0.0.0.0:9229 -r ts-node/register src/server/index.ts",
    "prod-start": "yarn --silent && yarn run migrate && yarn run start-server",
    "watch": "tsc-watch --onSuccess \"yarn run start-server\"",
    "migrate": "ts-node src/db/migrate.ts"
  },
  "dependencies": {
    "apollo-server": "^2.19.2",
    "app-root-path": "^3.0.0",
    "cron": "^1.8.2",
    "forever": "^3.0.4",
    "graphql": "^15.5.0",
    "moment": "^2.29.1",
    "mysql2": "^2.2.5",
    "node-fetch": "^2.6.1",
    "sequelize": "^6.5.0",
    "ts-node": "^9.1.1",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.1.3",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0"
  },
  "devDependencies": {
    "@types/node": "^14.14.22",
    "@types/node-fetch": "^2.5.8",
    "@types/sequelize": "^4.28.9",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "prettier": "^2.2.1"
  }
}