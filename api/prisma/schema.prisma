datasource db {
  provider = "mysql"
  url      = "mysql://root:admin@mysql:3306/oracle"
}

generator client {
  provider = "prisma-client-js"
}

model LogEntry {
  id        Int      @default(autoincrement()) @id
  currenciesSaved Int
  createdAt DateTime @default(now())
  currencyEntries  CurrencyEntry[]
}

model CurrencyEntry {
  id        Int      @default(autoincrement()) @id
  currencyId Int
  currency  Currency @relation(fields: [currencyId], references: [id])
  logEntryId Int
  logEntry  LogEntry @relation(fields: [logEntryId], references: [id])
}

model Currency {
  id        Int      @default(autoincrement()) @id
  nomicsId String @unique
  name     String
  symbol     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}